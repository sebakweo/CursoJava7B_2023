import java.util.Scanner;

public class Ejercicio8 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Competidor 1: ");
        int jugador1 = scanner.nextInt();
        
        System.out.println("Competidor 2: ");
        int jugador2 = scanner.nextInt();
        
        if (jugador1 == jugador2) {
            System.out.println("¡Empate!");
        } else if (jugador1 == 0 && jugador2 == 2) {
            System.out.println("¡Competidor 1 gana! Piedra vence a tijera.");
        } else if (jugador1 == 1 && jugador2 == 0) {
            System.out.println("¡Competidor 1 gana! Papel vence a piedra.");
        } else if (jugador1 == 2 && jugador2 == 1) {
            System.out.println("¡Competidor 1 gana! Tijera vence a papel.");
        } else {
            System.out.println("¡Competidor 2 gana!");
        }
    }
}
